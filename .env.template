# Hegemonikón Environment Variables
# Copy this file to .env and fill in the values
# Required for: LLM calls, MCP servers, vector search

# ─── Core LLM APIs ───────────────────────────────────────
GOOGLE_API_KEY=           # Gemini API (FEP evaluators, Anamnēsis)
GEMINI_API_KEY=           # Alias for Google GenAI SDK
OPENAI_API_KEY=           # OpenAI / LiteLLM fallback

# ─── Jules (Synergeia) ───────────────────────────────────
JULES_API_KEY=            # Jules distributed execution

# ─── Database ────────────────────────────────────────────
DATABASE_URL=             # SQLAlchemy (sqlite:///./data.db for local)

# ─── Optional ────────────────────────────────────────────
# PROXY_BASE_URL=         # LiteLLM proxy (if using)
# LITELLM_LICENSE=        # LiteLLM enterprise
# LANGSMITH_SAMPLING_RATE=0.1  # LangSmith tracing
