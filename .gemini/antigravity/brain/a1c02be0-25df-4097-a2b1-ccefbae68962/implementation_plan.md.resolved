# workflow_runner.py に追加
def interactive_run(theorem: str, problem: str):
    result = run_workflow(theorem, problem)
    print(format_derivative_selection(result))
    
    choice = input("→ このまま実行？ [y/代替/n]: ")
    if choice.lower() == 'y':
        workflow_path = THEOREM_TO_WORKFLOW[theorem]
        print(f"🚀 {workflow_path} を起動...")
