{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Hegemonikon",
  "version": "0.3.0",
  "identifier": "com.makaron8426.hgk",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Hegemonikón — FEP Cognitive Hypervisor",
        "width": 1280,
        "height": 860,
        "minWidth": 800,
        "minHeight": 600,
        "decorations": true,
        "transparent": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "deb",
      "appimage"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "linux": {
      "deb": {
        "depends": [
          "libwebkit2gtk-4.1-0",
          "libgtk-3-0"
        ],
        "section": "utils",
        "priority": "optional"
      },
      "appimage": {
        "bundleMediaFramework": false
      }
    },
    "shortDescription": "FEP-based Cognitive Hypervisor Desktop",
    "longDescription": "Hegemonikón Desktop — A cognitive hypervisor built on the Free Energy Principle. Features 3D knowledge graph visualization, FEP agent interaction, Gnōsis paper search, and system health monitoring.",
    "category": "Utility"
  }
}